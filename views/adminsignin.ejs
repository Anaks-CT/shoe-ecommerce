<%- include('./layouts/userheader.ejs') %> 

<div class="container-fluid login-container">
    <div class="row login-row d-flex justify-content-center align-items-center justify-content-space-around my-5">
        <div class="col-lg-8 align-items-center">
            <div class="login-div mx-auto">
                <form action="/adminlogin" class="text-center adminsignin-form d-flex flex-column align-items-center" method="post">
                    <img  class="banner py-4 pt-2" src="/images/RIS circle WHITE.png" alt="">
                    <p class="adminsignin-banner">Admin SignIn</p>
                    <p class="text-danger fw-bold"><%=locals.error%></p>
                    <input class="login-input my-2 p-2" type="text" placeholder="Email Address" name="email" id="inputEmail" onkeyup="emailCheck()">
                    <span class="text-danger" id="emailErrorCheck"></span>
                    <script>
                        function emailCheck() {
                            const inputEmail = $('#inputEmail').val()
                            if(!inputEmail.match(/^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/)){
                                $('#emailErrorCheck').text('Invalid Email')
                                $('#signInButton').css('pointer-events','none')
                            }else{
                                $('#emailErrorCheck').text('')
                                $('#signInButton').css('pointer-events','')
                            }
                        }
                    </script>
                    <input class="login-input my-2 p-2" type="password" placeholder="Password" name="password">
                    <button class="login-button" id="signInButton" type="submit">Sign In</button>
                    <p class="px-4 imadminbutton"><a href="login">Im a user</a></p>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('./layouts/userfooter.ejs') %> 
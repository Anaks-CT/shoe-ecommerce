<%- include('./layouts/userheader.ejs') %> 

<div class="container-fluid login-container">
    <div class="row login-row d-flex justify-content-center align-items-center justify-content-space-around my-5">
        <div class="col-lg-4 align-items-center">
            <div class="login-div mx-auto d-flex justify-content-center otpdiv">
                <form action="/forgotPassword" class="text-center d-flex flex-column align-items-center" method="post">
                    <img  class="banner py-4 pt-5" src="/images/RIS circle WHITE.png" alt="">
                    <!-- <p class="message">Enter your Email</p> -->
                    <p class="text-danger fw-bold m-0"><%=locals.error%></p>
                    <input class="login-input my-2 p-2" type="text" placeholder="Email Address" required="" name="email" id="inputEmail" onkeyup="emailCheck()">
                    <span class="text-danger" id="emailErrorCheck"></span>                    
                    <button class="login-button otpbutton" id="sendOTPbutton" type="submit">Send OTP</button>
                    <script>
                        function emailCheck() {
                            const inputEmail = $('#inputEmail').val()
                            if(!inputEmail.match(/^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/)){
                                $('#emailErrorCheck').text('Invalid Email')
                                $('#sendOTPbutton').css('pointer-events','none')
                            }else{
                                $('#emailErrorCheck').text('')
                                $('#sendOTPbutton').css('pointer-events','')
                            }
                        }
                    </script>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('./layouts/userfooter.ejs') %> 

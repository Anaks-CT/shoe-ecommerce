<%- include('./layouts/userheader.ejs') %> 

<div class="container">
    <div class="row">
        <div class="col-12 pt-5 d-flex justify-content-center">
            <div class="d-flex">
                    <input class="login-input my-2 p-3 form-control" type="search" name="search" placeholder="Search" onkeyup="search()" id="searchInput">
                        <button  id="searchIcon" onclick="searchBtn()" class="btn btn-info btn-sm m-2 px-4" style="background-color: #58a3bb;">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                        <button  id="removeFilterBtn" class="btn btn-sm m-2 w-75" style="display: none; background-color: #58a3bb;" onclick="removeFilter()">Remove filter</button>
                    
            </div>
        </div>
        <script>
            function searchBtn () {
                var searchInput = $("#searchInput").val()
                $.ajax({
                        url : '/products?search='+searchInput,
                        method : 'put',
                        success:(res) => {
                            $("#products").load(location.href + " #products");

                        }
                        })
            }

            function search () {
                $('#searchIcon').css('display','none')
                $('#removeFilterBtn').css('display','')
                var searchInput = $("#searchInput").val()
                $.ajax({
                        url : '/products?search='+searchInput,
                        method : 'put',
                        success:(res) => {
                            $("#products").load(location.href + " #products");

                        }
                        })
            }
            function removeFilter () {
                $('#searchIcon').css('display','')
                $('#removeFilterBtn').css('display','none')
                $.ajax({
                        url : '/products?filter=none',
                        method : 'patch',
                        success:(res) => {
                            $("#products").load(location.href + " #products");

                            console.log('hiosdhfohds');
                        }
                        })
            }
        </script>
    
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <div><p class=" my-0 mx-2" style="padding-top: 6px; color: #58a3bb;"> <b>Sort By</b> <i class="fa-solid fa-arrow-up-short-wide"></i></p></div>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                      Dropdown button
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                      <li><button onclick="sortByPriceDes('descending')" class="btn text-white">High to low</button></li>
                      <li><button onclick="sortByPriceDes('ascending')" class="btn text-white">Low to high</button></li>
                    </ul>
                </div>
            </div>
            <div class="d-flex">
                <p class=" my-0 mx-2" style="padding-top: 6px; color: #58a3bb;"> <b>Filter By</b> <i class="fa-solid fa-arrow-up-short-wide"></i></p>
              
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                      Dropdown button
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                        <% category.forEach((item)=>{ %>
                            <% if(item.active==true) { %>
                                <li class="p-2" onclick="filter('<%= item.Name %>')"><%= item.Name %></li>
                            <% }else { %>
                                <% } %>
                        <% }) %>
                    </ul>
                  </div>
            </div>
            <script>
                function filter (categoryName){
                    $.ajax({
                        url : '/products?filter='+categoryName,
                        method : 'patch',
                        success:(res) => {
                            $("#products").load(location.href + " #products");
                            console.log('hiosdhfohds');
                        }
                        })
                }
                
            </script>


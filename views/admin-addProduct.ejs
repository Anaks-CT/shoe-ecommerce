<%- include('./layouts/adminheader.ejs') %> 

<div class="container">
    <div class=" text-center mt-5 ">
        <h1 >Add Product</h1>        
    </div>
    <div class="row ">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">   
                    <div class = "container">
                        <form id="contact-form" role="form" method="post" action="/addProduct" enctype="multipart/form-data">
                            <div class="controls">
                                <div class="row">
                                    <p class="text-danger"><%=locals.error%></p>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_name">Product name *</label>
                                                <input id="form_name" type="text" name="name" class="form-control" placeholder="Please enter product name *" required="required" data-error="product name is required.">                                                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_lastname">Price *</label>
                                            <input id="form_lastname" type="number" name="price" class="form-control" placeholder="Please enter the price *" required="required" data-error="Price is required.">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_need">Color *</label>
                                            <select id="form_need" name="color" class="form-control" required="required" data-error="Please specify color.">
                                                <option value="" selected disabled>--select--</option>
                                                <option >Black</option>
                                                <option >Blue</option>
                                                <option >Brown</option>
                                                <option >Green</option>
                                                <option >Grey</option>
                                                <option >Orange</option>
                                                <option >Pink</option>
                                                <option >Purple</option>
                                                <option >Red</option>
                                                <option >White</option>
                                                <option >Yellow</option>
                                                <option >Muti-color</option>
                                            </select>                                            
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_need">Category *</label>
                                            <select id="form_need" name="category" class="form-control" required="required" data-error="Please specify size.">
                                                <option value="" selected disabled>--select--</option>
                                                <% category.forEach((item)=>{ %>
                                                    <% if(item.active==true) { %>
                                                        <option ><%= item.Name %></option>
                                                <% }else { %>
                                                <% } %>
                                                <% }) %>
                                            </select>                                            
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_lastname">Small Stock *</label>
                                            <input id="form_lastname" type="number" name="smallStock" class="form-control" placeholder="Please enter the stock amount *" required="required" data-error="Price is required.">
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_lastname">Medium Stock *</label>
                                            <input id="form_lastname" type="number" name="mediumStock" class="form-control" placeholder="Please enter the stock amount *" required="required" data-error="Price is required.">
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_lastname">Large Stock *</label>
                                            <input id="form_lastname" type="number" name="largeStock" class="form-control" placeholder="Please enter the stock amount *" required="required" data-error="Price is required.">
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_lastname">X-lagrge Stock *</label>
                                            <input id="form_lastname" type="number" name="XLstock" class="form-control" placeholder="Please enter the stock amount *" required="required" data-error="Price is required.">
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_lastname">XX-large Stock *</label>
                                            <input id="form_lastname" type="number" name="XXLstock" class="form-control" placeholder="Please enter the stock amount *" required="required" data-error="Price is required.">
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_name">Left side view *</label>
                                                <input id="form_name" type="file" name="image" class="form-control" placeholder="Please enter product name *" required="required" data-error="product name is required." >                                                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_name">Right side view *</label>
                                                <input id="form_name" type="file" name="image2" class="form-control" placeholder="Please enter product name *" required="required" data-error="product name is required." >                                                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_name">Top veiw *</label>
                                                <input id="form_name" type="file" name="image3" class="form-control" placeholder="Please enter product name *" required="required" data-error="product name is required." >                                                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_name">Rear view *</label>
                                                <input id="form_name" type="file" name="image4" class="form-control" placeholder="Please enter product name *" required="required" data-error="product name is required." >                                                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_name">Bottom view *</label>
                                                <input id="form_name" type="file" name="image5" class="form-control" placeholder="Please enter product name *" required="required" data-error="product name is required." multiple>                                                                           
                                        </div>
                                    </div>
                                    <div class="col-md-6 py-2">
                                        <div class="form-group">
                                            <label for="form_name">Background NIL 3D view</label>
                                                <input id="form_name" type="file" name="image6" class="form-control" placeholder="Please enter product name *" required="required" data-error="product name is required." multiple>                                                                           
                                        </div>
                                    </div>
                                <div class="row py-2">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="form_message">Description *</label>
                                            <textarea id="form_message" name="description" class="form-control" placeholder="Write description *." rows="4" required="required" data-error="Please, leave us a message."></textarea>                                                
                                        </div>
                                    </div>    
                                    <div class="col-md-6">                                        
                                        <input type="submit" class="btn btn-success btn-send  pt-2 btn-block
                                            " value="Add Product" >                                    
                                    </div>
                                    <div class="col-md-6">                                        
                                       <a class="btn btn-success btn-send  pt-2 btn-block cancel-button" href="/productDetail">CANCEL</a>                                  
                                    </div>
                                </div>       
                            </div>
                        </form>
                    </div>
                </div>                                
            </div>                                       
        </div>                                  
    </div>
 </div>
                


                                    
                        
                                


        


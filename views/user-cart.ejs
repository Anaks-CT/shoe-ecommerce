<%- include('./layouts/userheader.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12 py-5">
            <h1 class="yourAccount">YOUR CART</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="container">
                <% product.forEach(function(product,i){ %>
                <div class="row">
                    <div class="col-2 d-flex align-items-center justify-content-center">
                        <img class="cart_image" src="/images/productImage/<%= product.productId.Image1 %>" alt="">
                    </div>
                    <div class="col-4 d-flex flex-column justify-content-around">
                        <div class="col-12"><p id="productName"><%= product.productId.Name %></p></div>
                        <div class="col-12"><p class="cart-price">$<%= product.productId.Price %></p></div>
                    </div>
                    <div class="col-2 d-flex align-items-center justify-content-center">
                        <div><p style="margin: 0;" id="productSize"><%= product.productId.Size %></p></div>
                    </div>
                    <div class="col-1 d-flex flex-column justify-content-center align-items-center">
                        <div><button class="btn" onclick="incCartItems('<%= product.productId._id %>')"><i class="fa-sharp fa-solid fa-caret-up"></i></button></div>
                        <div><p style="margin: 0;" id="productQty"><%= product.quantity %></p></div>
                        <div><button class="btn"><i class="fa-solid fa-caret-down"></i></button></div>
                    </div>
                    <div class="col-2 d-flex align-items-center justify-content-center">
                        <p class="cart-totalprice" id="productPrice">$<%= product.price %></p>
                    </div>
                    <div class="col-1 d-flex align-items-center justify-content-center">
                        <div><a href="/deleteCartItem?i=<%= i %>"><i class="fa-solid fa-trash text-primary"></i></a></div>
                    </div>
                </div>
                <hr>
                <% }) %>
            </div>
        </div>
        <div class="col-md-4 d-flex flex-column justify-content-center">
            <div class="container bg-light">
                <div class="row">
                    <div class="col-12"></div>
                    <div class="col-12"></div>
                    <div class="col-12"></div>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include('./layouts/userfooter.ejs') %>
